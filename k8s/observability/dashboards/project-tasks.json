          "datasource": {
            "type": "tempo",
            "uid": "tempo"
          },
          "queryType": "traceql",
          "query": "{resource.project.id != \"\" && span.task.id != \"\"} | select(resource.project.id, span.task.title, span.task.status, span.task.type, span.task.owner, duration)",
          "limit": 50,
          "refId": "A"
        }
