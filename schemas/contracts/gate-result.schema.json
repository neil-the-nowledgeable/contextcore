{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://contextcore.io/schemas/contracts/gate-result.schema.json",
  "title": "GateResult",
  "description": "Typed outcome for a quality/integrity gate between workflow phases.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "gate_id",
    "phase",
    "result",
    "severity",
    "checked_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "gate_id": {
      "type": "string",
      "minLength": 1
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "task_id": {
      "type": "string",
      "minLength": 1
    },
    "phase": {
      "type": "string",
      "enum": [
        "INIT_BASELINE",
        "EXPORT_CONTRACT",
        "CONTRACT_INTEGRITY",
        "INGEST_PARSE_ASSESS",
        "ROUTING_DECISION",
        "ARTISAN_DESIGN",
        "ARTISAN_IMPLEMENT",
        "TEST_VALIDATE",
        "REVIEW_CALIBRATE",
        "FINALIZE_VERIFY",
        "OTHER"
      ]
    },
    "result": {
      "type": "string",
      "enum": [
        "pass",
        "fail"
      ]
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "warning",
        "error",
        "critical"
      ]
    },
    "reason": {
      "type": "string",
      "minLength": 1
    },
    "next_action": {
      "type": "string",
      "minLength": 1
    },
    "blocking": {
      "type": "boolean",
      "default": false
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "ref"
        ],
        "properties": {
          "type": {
            "type": "string",
            "minLength": 1
          },
          "ref": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "checked_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
