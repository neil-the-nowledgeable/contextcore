{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://contextcore.io/schemas/contracts/handoff-contract.schema.json",
  "title": "HandoffContract",
  "description": "Typed contract for agent-to-agent delegation.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "handoff_id",
    "from_agent",
    "to_agent",
    "capability_id",
    "inputs",
    "expected_output"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "handoff_id": {
      "type": "string",
      "minLength": 1
    },
    "project_id": {
      "type": "string",
      "minLength": 1
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "parent_task_id": {
      "type": "string",
      "minLength": 1
    },
    "from_agent": {
      "type": "string",
      "minLength": 1
    },
    "to_agent": {
      "type": "string",
      "minLength": 1
    },
    "capability_id": {
      "type": "string",
      "minLength": 1
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "normal",
        "high",
        "critical"
      ],
      "default": "normal"
    },
    "inputs": {
      "type": "object"
    },
    "expected_output": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1
        },
        "schema_ref": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "accepted",
        "in_progress",
        "completed",
        "failed",
        "expired"
      ],
      "default": "pending"
    },
    "result_trace_id": {
      "type": "string",
      "minLength": 1
    },
    "error": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "deadline": {
      "type": "string",
      "format": "date-time"
    }
  }
}
